---
export interface Props {
  variant?: 'primary' | 'secondary';
  className?: string;
  onClick?: string;
  disabled?: boolean;
  type?: 'button' | 'submit';
}

const { 
  variant = 'primary',
  className = '',
  onClick,
  disabled = false,
  type = 'button'
} = Astro.props;

const baseClasses = "cursor-pointer px-4 py-2 rounded-lg transition-all text-xs";

const variantClasses = {
  primary: "bg-secondary hover:bg-secondary/60 border border-primary/40",
  secondary: "bg-primary/10 hover:bg-primary/20 border border-primary/20"
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

<button 
  type={type}
  class={classes}
  onclick={onClick}
  disabled={disabled}
>
  <slot />
</button> 